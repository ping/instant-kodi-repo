<?xml version='1.0' encoding='UTF-8'?>
<addons><addon id="repository.ping.instant-kodi-repo" name="ping/instant-kodi-repo Repository" provider-name="ping" version="1.0.1">
    <extension point="xbmc.addon.repository">
        
        <dir minversion="17.0.0">
            <info compressed="false">https://ping.github.io/instant-kodi-repo/master/addons.xml</info>
            <checksum>https://ping.github.io/instant-kodi-repo/master/addons.xml.md5</checksum>
            <datadir zip="true">https://ping.github.io/instant-kodi-repo/master/datadir/</datadir>
        </dir>

    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">A personal Kodi addon repository from https://github.com/ping/instant-kodi-repo</summary>
        <description lang="en_GB" />
        <language />
        <platform>all</platform>
        <license>GPL-3.0</license>
        <forum />
        <source />
        <news />
        <disclaimer />
        <assets>
            <icon>resources/icon.png</icon>
            <fanart />
        </assets>
    </extension>
