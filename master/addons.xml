<?xml version='1.0' encoding='UTF-8'?>
<addons><addon id="plugin.video.tvhk" name="Hong Kong TV" provider-name="y2kbug" version="1.0.1">
    <requires>
        <import addon="xbmc.python" version="2.26.0" />
        <import addon="script.module.inputstreamhelper" version="0.3.4" />
        <import addon="script.module.simplejson" version="3.16.1" />
        <import addon="script.module.requests" version="2.22.0" />
    </requires>
    <extension library="main.py" point="xbmc.python.pluginsource">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en">Plugin for Hong Kong TV</summary>
        <description lang="en_GB">Television channels of Hong Kong on KODI</description>
        <disclaimer lang="en_GB">Home use only</disclaimer>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
            <screenshot>resources\screenshot.png</screenshot>
        </assets>
        <news>Includes only free public channels</news>
    </extension>
</addon><addon id="repository.tvhk-dev.tvhk-kodi-repo" name="tvhk-dev/tvhk-kodi-repo Repository" provider-name="tvhk-dev" version="1.0.1">
    <extension point="xbmc.addon.repository">
        
        <dir minversion="17.0.0">
            <info compressed="false">https://tvhk-dev.github.io/tvhk-kodi-repo/master/addons.xml</info>
            <checksum>https://tvhk-dev.github.io/tvhk-kodi-repo/master/addons.xml.md5</checksum>
            <datadir zip="true">https://tvhk-dev.github.io/tvhk-kodi-repo/master/datadir/</datadir>
        </dir>

    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">A personal Kodi addon repository from https://github.com/tvhk-dev/tvhk-kodi-repo</summary>
        <description lang="en_GB" />
        <language />
        <platform>all</platform>
        <license>GPL-3.0</license>
        <forum />
        <source />
        <news />
        <disclaimer />
        <assets>
            <icon>resources/icon.png</icon>
            <fanart />
        </assets>
    </extension>
</addon><addon id="script.hello.world" name="Hello World" provider-name="zag" version="1.0.1">
	<requires>
		<import addon="xbmc.python" version="2.14.0" />
	</requires>
	<extension library="addon.py" point="xbmc.python.script">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Popup Hello World</summary>
		<description lang="en">Example Script to show hello world</description>
		<license>GNU General Public License, v2</license>
		<language />
		<forum>http://forum.kodi.tv/showthread.php?tid=209948</forum>
		<source>https://github.com/zag2me/script.hello.world</source>
		<website>Kodi.tv</website>
		<email>zag@kodi.org</email>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
