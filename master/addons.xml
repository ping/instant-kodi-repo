<addons><addon id="plugin.video.tvhk" name="TVHK Live HK TV Addon" provider-name="y2kbug / TVHK Team" version="0.9.4">
    <requires>
        <import addon="xbmc.python" version="2.26.0" />
        <import addon="script.module.inputstreamhelper" version="0.3.4" />
        <import addon="script.module.simplejson" version="3.16.1" />
        <import addon="script.module.requests" version="2.22.0" />
    </requires>
    <extension library="main.py" point="xbmc.python.pluginsource">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en">Addon for Live Hong Kong TV Channels</summary>
        <description lang="en_GB">Live Hong Kong TV Channels of Hong Kong on Kodi</description>
        <disclaimer lang="en_GB">All rights resvered to Channel owners. TVHK do not have any right of the channels and only presents what is available through the Internet into Kodi</disclaimer>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
            <screenshot>resources\screenshot.png</screenshot>
        </assets>
        <news>Includes only free public channels</news>
    </extension>
